<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="3"
    android:background="@color/colorBackground"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />


    <GridLayout
        android:id="@+id/weight_up_gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="0"
            android:padding="5dp"
            android:text="@string/weighting_material"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <Spinner
            android:id="@+id/spinner_weighting_material"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:entries="@array/weighting_agents" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="1"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="@string/weighting_material"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/input_weighting_material"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="1"
            android:ems="7"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/unit_weighting_material"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="1"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="@string/sg"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="2"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="@string/initial_mud_weight"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/input_initial_mud_weight"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="2"
            android:ems="7"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/unit_initial_mud_weight"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="2"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="@string/sg"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="3"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="@string/initial_volume"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/input_initial_volume"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="3"
            android:ems="7"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/unit_initial_volume"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="3"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="@string/bbl"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="4"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="@string/desired_mud_weight"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/input_desired_mud_weight"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="4"
            android:ems="7"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/unit_desired_mud_weight"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="4"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="@string/sg"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="6"
            android:padding="5dp"
            android:text="@string/material_needed"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/output_material_needed"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="6"
            android:padding="5dp"
            android:text="@string/zero"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/unit_material_needed"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="6"
            android:padding="5dp"
            android:text="@string/kg"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="7"
            android:padding="5dp"
            android:text="@string/volume_increase"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/output_volume_increase"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="7"
            android:padding="5dp"
            android:text="@string/zero"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/unit_volume_increase"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="7"
            android:padding="5dp"
            android:text="@string/bbl"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="8"
            android:padding="5dp"
            android:text="@string/total_volume"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/output_total_volume"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="8"
            android:padding="5dp"
            android:text="@string/zero"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/unit_total_volume"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="8"
            android:padding="5dp"
            android:text="@string/bbl"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="5"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear_data"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_clear"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/calculate_data"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_calc"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <TextView
            android:id="@+id/label_sacks_size"
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="9"
            android:padding="5dp"
            android:text="@string/sacks_size"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/input_sacks"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="9"
            android:ems="7"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/unit_sacks"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="9"
            android:padding="5dp"
            android:text="@string/kg_sack"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/label_sacks_amount"
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="10"
            android:padding="5dp"
            android:text="@string/sacks_amount"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/output_sacks"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="10"
            android:ems="7"
            android:padding="5dp"
            android:text="@string/zero"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/sacks"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="10"
            android:padding="5dp"
            android:text="@string/sacks"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

    </GridLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/weight_up_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_up_gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/unitId"/>

</RelativeLayout>