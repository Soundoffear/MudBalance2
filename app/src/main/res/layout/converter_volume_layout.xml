<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center_horizontal">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize"
                android:text="Convert From: "
                android:padding="5dp"/>

            <Spinner
                android:id="@+id/volume_converter_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/volumes"/>

        </LinearLayout>

        <TextView
            android:id="@+id/converter_bbl_title"
            android:layout_column="0"
            android:layout_row="1"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/oil_barrel"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/main_input_volume_converter"
            android:ems="7"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textSize"
            android:text="@string/zero"
            android:textColor="@color/textColor"
            android:selectAllOnFocus="true"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/converter_bbl_unit"
            android:layout_column="2"
            android:layout_row="1"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/bbl"
            android:padding="5dp"/>

        <Space
            android:layout_height="12dp"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="2"/>

        <TextView
            android:id="@+id/converter_ft3_title"
            android:layout_column="0"
            android:layout_row="3"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/cubic_foot"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/main_output_ft3_converter"
            android:layout_column="1"
            android:layout_row="3"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="@dimen/textSize"
            android:text="@string/zero"
            android:textColor="@color/textColor"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/converter_ft3_unit"
            android:layout_column="2"
            android:layout_row="3"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/ft3"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/converter_gal_title"
            android:layout_column="0"
            android:layout_row="4"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/gallon"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/main_output_gal_converter"
            android:layout_column="1"
            android:layout_row="4"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="@dimen/textSize"
            android:text="@string/zero"
            android:textColor="@color/textColor"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/converter_gal_unit"
            android:layout_column="2"
            android:layout_row="4"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/gal"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/converter_m3_title"
            android:layout_column="0"
            android:layout_row="5"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/cubic_meter"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/main_output_m3_converter"
            android:layout_column="1"
            android:layout_row="5"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="@dimen/textSize"
            android:text="@string/zero"
            android:textColor="@color/textColor"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/converter_m3_unit"
            android:layout_column="2"
            android:layout_row="5"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/m3"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/converter_l_title"
            android:layout_column="0"
            android:layout_row="6"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/liter"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/main_output_l_converter"
            android:layout_column="1"
            android:layout_row="6"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="@dimen/textSize"
            android:text="@string/zero"
            android:textColor="@color/textColor"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/converter_l_unit"
            android:layout_column="2"
            android:layout_row="6"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:text="@string/l"
            android:padding="5dp"/>

    </GridLayout>

</RelativeLayout>